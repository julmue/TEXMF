% ------------------------------------------------------------------------------
% semantic predicates in text 
% ------------------------------------------------------------------------------
\newcommand{\axiom}[1]{\text{#1}}
\newcommand{\definiendum}[1]{\text{#1}} % definiendum in the body of the definiens
\newcommand{\mobj}[1]{\text{\textbf{#1}}}
\newcommand{\concept}[1]{\textit{#1}}
\newcommand{\property}[1]{\textit{#1}}
\newcommand{\informal}[1]{\enquote{#1}}

% ------------------------------------------------------------------------------
% math notation facilities 
% ------------------------------------------------------------------------------
\newcommand{\set}[1]{\{#1\}}
\newcommand{\comp}[2]{\{ #1 | #2 \}}

% ------------------------------------------------------------------------------
% misc
% ------------------------------------------------------------------------------
% foreign language ... maybe this could be done better
\newcommand{\engl}[2]{(\text{#1}: \textit{#2})}
% wrapper for graphics
\newcommand{\graphics}[2]%
{\begin{center}\includegraphics[width=7cm]{#1}\captionof{figure}{#2}\end{center}}

